<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:minHeight="60dp"
    android:layout_centerVertical="true"
    android:gravity="center_vertical"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:background="@drawable/list_item_bg">

    <TextView
        android:id="@+id/number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/listview_text_title_flight_number"
        android:textColor="@color/listview_title_text"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/listview_text_title_flight_status"
        android:textColor="@color/listview_title_text"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/depart_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/listview_text_title_originating_information"
        android:textColor="@color/listview_title_text"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/arrvive_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/listview_text_title_arrival_information"
        android:textColor="@color/listview_title_text"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/delay_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/listview_text_title_delay_information"
        android:textColor="@color/listview_title_text"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/listview_text_title_time"
        android:textColor="@color/listview_title_text"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/gate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/listview_text_title_boarding_gate_information"
        android:textColor="@color/listview_title_text"
        android:textSize="@dimen/text_size" />

</LinearLayout>