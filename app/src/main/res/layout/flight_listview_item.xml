<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:minHeight="60dp"
              android:layout_centerVertical="true"
              android:gravity="center_vertical"
              android:layout_marginLeft="30dp"
              android:layout_marginRight="30dp"
              android:background="@drawable/list_item_bg">

    <TextView
        android:id="@+id/list_item_text_title__flight_number"
        android:layout_width="@dimen/listview_title_textview_size"
        android:layout_height="wrap_content"
        android:textColor="@color/listview_title_text"
        android:textSize="@dimen/text_size"
        android:text="@string/listview_text_title_flight_number"
        android:gravity="start"
        />

    <TextView
        android:id="@+id/list_item_text_title_flightno"
        android:layout_width="@dimen/listview_title_textview_size"
        android:layout_height="wrap_content"
        android:textColor="@color/listview_title_text"
        android:gravity="center"
        android:textSize="@dimen/text_size"
        android:text="@string/listview_text_title_flight_status"/>

    <TextView
        android:id="@+id/list_item_text_title__flight_type"
        android:layout_width="@dimen/listview_title_textview_size"
        android:layout_height="wrap_content"
        android:textColor="@color/listview_title_text"
        android:textSize="@dimen/text_size"
        android:text="@string/listview_text_title_flight_type"
        android:gravity="center"/>
    <TextView
        android:id="@+id/list_item_text_title_destination"
        android:layout_width="@dimen/listview_title_textview_size"
        android:layout_height="wrap_content"
        android:textColor="@color/listview_title_text"
        android:textSize="@dimen/text_size"
        android:text="@string/listview_text_title_originating_information"
        android:gravity="center"/>
    <TextView
        android:id="@+id/list_item_text_title_arrival_information"
        android:layout_width="@dimen/listview_title_textview_size"
        android:layout_height="wrap_content"
        android:textColor="@color/listview_title_text"
        android:textSize="@dimen/text_size"
        android:text="@string/listview_text_title_arrival_information"
        android:gravity="center"/>
    <TextView
        android:id="@+id/list_item_text_title_delay_information"
        android:layout_width="@dimen/listview_title_textview_size"
        android:layout_height="wrap_content"
        android:textColor="@color/listview_title_text"
        android:textSize="@dimen/text_size"
        android:text="@string/listview_text_title_delay_information"
        android:gravity="center"/>
    <TextView
        android:id="@+id/list_item_text_title_time"
        android:layout_width="@dimen/listview_title_textview_size"
        android:layout_height="wrap_content"
        android:textColor="@color/listview_title_text"
        android:textSize="@dimen/text_size"
        android:text="@string/listview_text_title_time"
        android:gravity="center"
        android:layout_weight="1"/>

</LinearLayout>