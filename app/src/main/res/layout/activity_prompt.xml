<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.PromptFragment">

    <include
        android:id="@+id/title"
        layout="@layout/titlebar" />

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/line"
        android:layout_below="@+id/title"
        android:layout_marginTop="20dp"
        android:paddingLeft="122dp"
        android:paddingRight="122dp"
        android:transcriptMode="normal" />

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/bottom"
        android:background="#FFA4A1A1" />


    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <Button
            android:id="@+id/insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:background="@mipmap/btn_insert"
            android:text="插入"
            android:textColor="#ffffff" />


        <LinearLayout
            android:id="@+id/ll_linear"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:paddingLeft="122dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="次数 : "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_edit_times"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@mipmap/bg_edit_date"
                android:gravity="center"
                android:text="@string/hour_09"
                android:textSize="@dimen/edit_right_textSize" />

            <ImageView
                android:id="@+id/iv_edit_times"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/bg_edit_xiala_enable"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/iv_edit_arrow_time" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="间隔时间: "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_edit_hour"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@mipmap/bg_edit_date"
                android:gravity="center"
                android:text="@string/hour_09"
                android:textSize="@dimen/edit_right_textSize" />

            <ImageView
                android:id="@+id/iv_edit_hour"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/bg_edit_xiala_enable"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/iv_edit_arrow_time" />

            <TextView
                android:id="@+id/tv_edit_min"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="6dp"
                android:background="@mipmap/bg_edit_date"
                android:gravity="center"
                android:text="@string/min_30"
                android:textSize="@dimen/edit_right_textSize" />

            <ImageView
                android:id="@+id/iv_edit_min"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/bg_edit_xiala_enable"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/iv_edit_arrow_time" />
            <!--<LinearLayout-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="50dp"-->
            <!--android:orientation="horizontal"-->
            <!--android:paddingLeft="10dp">-->

            <!---->

            <!---->


            <!--</LinearLayout>-->


        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
