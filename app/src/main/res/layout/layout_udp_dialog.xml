<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="22dp"
        android:text="连接设置"/>


    <LinearLayout
        android:id="@+id/linear_content"
        android:layout_below="@+id/text_title"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IP地址"
                android:textSize="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MAC地址"
                android:textSize="22dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/text_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="192.168.1.123"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/text_mac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="192.168.1.123"
                android:textSize="22dp" />


        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_base"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:text="11"/>

        <Button
            android:id="@+id/btn_connected"
            android:layout_toLeftOf="@+id/tv_base"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/btn_connect"
            android:textColor="#FFFFFF"
            android:text="建立连接" />


        <Button
            android:id="@+id/btn_add"
            android:layout_toRightOf="@+id/tv_base"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/btn_add_w"
            android:textColor="#FFFFFF"
            android:text="屏蔽连接" />


    </RelativeLayout>

</RelativeLayout>