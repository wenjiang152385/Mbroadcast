<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/list_item_RelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/list_item_bg"
                android:gravity="center_vertical"
                android:minHeight="60dp">

    <LinearLayout
        android:id="@+id/list_item_linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/list_item_text_play_time"
            android:layout_width="@dimen/listview_title_textview_size"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/listview_text_title_play_time"
            android:textColor="@color/listview_title_text"
            android:textSize="@dimen/text_size"
            />

        <TextView
            android:id="@+id/list_item_text_flight_number"
            android:layout_width="@dimen/listview_title_textview_size"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/listview_text_title_flight_number"
            android:textColor="@color/listview_title_text"
            android:textSize="@dimen/text_size"
            />

        <TextView
            android:id="@+id/list_item_text_plane_type"
            android:layout_width="@dimen/listview_title_textview_size"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/listview_text_title_take_off"
            android:textColor="@color/listview_title_text"
            android:textSize="@dimen/text_size"
            />

        <TextView
            android:id="@+id/list_item_text_destination"
            android:layout_width="@dimen/listview_title_textview_size"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/listview_text_title_destination"
            android:textColor="@color/listview_title_text"
            android:textSize="@dimen/text_size"
            />

        <com.oraro.mbroadcast.ui.widget.AlwaysMarqueeScrollView
            android:id="@+id/list_item_text_type"
            android:layout_width="@dimen/listview_title_textview_size"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/listview_text_title_type"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:textColor="@color/listview_title_text"
            android:textSize="@dimen/text_size"
            />

        <TextView
            android:id="@+id/text_title_yanwu"
            android:layout_width="@dimen/listview_title_textview_size"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="未延误"
            android:textColor="@color/listview_title_text"
            android:textSize="@dimen/text_size"
            />

        <LinearLayout
            android:id="@+id/list_item_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/list_item_img"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                />

            <ImageView
                android:id="@+id/list_title_img_play_again"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:src="@drawable/listview_item_play_again_img_bg"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:scaleType="fitCenter"
                />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/list_item_view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_item_view_color"
        />

    <View
        android:id="@+id/list_item_view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="60dp"
        android:background="@color/list_item_view_color"
        />

</RelativeLayout>