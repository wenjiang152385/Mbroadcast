<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_edit_flightNum_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/ll_edit_showInfo_marginTop"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/tv_edit_flightNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/a"
        android:gravity="center"
        android:maxLines="1"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:text="@string/flightNum"
        android:textSize="@dimen/edit_right_textSize" />

    <EditText
        android:id="@+id/et_edit_flightNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edit"
        android:clickable="true"
        android:enabled="false"
        android:gravity="center"
        android:imeOptions="flagNoExtractUi"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:text="@string/Wu"
        android:textSize="@dimen/edit_right_textSize" />

    <TextView
        android:id="@+id/tv_edit_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edit_text"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:text="@string/startPlace"
        android:textSize="@dimen/edit_right_textSize" />

    <EditText
        android:id="@+id/et_edit_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edit"
        android:enabled="false"
        android:gravity="center"
        android:paddingBottom="10dp"

        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:text="@string/Wu"
        android:textSize="@dimen/edit_right_textSize" />

    <TextView
        android:id="@+id/tv_edit_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edit_text"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:text="@string/destination"
        android:textSize="@dimen/edit_right_textSize" />

    <EditText
        android:id="@+id/et_edit_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edit"
        android:enabled="false"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:text="@string/Wu"
        android:textSize="@dimen/edit_right_textSize" />
</LinearLayout>